<?xml version="1.0"?>
<!--
/**
 * BULK HOMME - Product View Layout
 * 
 * @category  BulkHomme
 * @package   BulkHomme_Theme
 */
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="catalog-product-view bulkhomme-product-page"/>
        
        <!-- Enhance product page structure -->
        <referenceContainer name="product.info.main">
            <!-- Move price to top -->
            <move element="product.info.price" destination="product.info.main" before="-"/>
            
            <!-- Add custom product highlights -->
            <block class="Magento\Framework\View\Element\Template" 
                   name="product.highlights"
                   template="Magento_Catalog::product/view/highlights.phtml"
                   after="product.info.price"/>
        </referenceContainer>
        
        <!-- Customize add to cart section -->
        <referenceBlock name="product.info.addtocart">
            <block class="Magento\Catalog\Block\Product\View" 
                   name="product.info.addtocart.additional" 
                   template="Magento_Catalog::product/view/addtocart-additional.phtml"
                   after="-"/>
        </referenceBlock>
    </body>
</page>
